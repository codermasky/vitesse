# Project
PROJECT_NAME=Vitesse AI Backend
API_V1_STR=/api/v1
ENVIRONMENT=development

# Server
SERVER_NAME=Vitesse
SERVER_HOST=http://localhost
SERVER_PORT=8000

# CORS
# Comma-separated list of origins
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# Database
POSTGRES_SERVER=db
POSTGRES_USER=vitesse
POSTGRES_PASSWORD=vitesse123
POSTGRES_DB=vitesse
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Security
# CRITICAL: Change this in production!
SECRET_KEY=changethis-secret-key-for-vitesse-dev-only
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Default Admin (Initial Setup)
# If not set, a random password will be generated and logged.
# ADMIN_INITIAL_PASSWORD=

# Vector DB
VECTOR_DB_TYPE=faiss
# PINECONE_API_KEY=
# PINECONE_ENVIRONMENT=

# LLM Configuration
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
DEFAULT_LLM_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# LangFuse (Observability)
ENABLE_LANGFUSE=False
# LANGFUSE_PUBLIC_KEY=
# LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=http://langfuse:3000

# Azure AD SSO (Optional)
AZURE_AD_ENABLED=False
